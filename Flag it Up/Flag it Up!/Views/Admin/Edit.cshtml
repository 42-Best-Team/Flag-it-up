@model FlagItUpApp.Models.User
@{
    Layout = "_Layout";
}

<h2>Редагувати користувача: @Model.Username</h2>

<form method="post">
    <div class="form-group">
        <label for="Username">Ім’я користувача</label>
        <input type="text" id="Username" name="Username" value="@Model.Username" class="form-control" />
    </div>

    <div class="form-group mt-3">
        <label for="Role">Роль</label>
        <select id="Role" name="Role" class="form-control">
            @if (Model.Role == "Admin")
            {
                <option value="Admin" selected>Admin</option>
                <option value="Player">Player</option>
            }
            else
            {
                <option value="Admin">Admin</option>
                <option value="Player" selected>Player</option>
            }
        </select>

    </div>

    <button type="submit" class="btn btn-success mt-3">Оновити</button>

    @if (ViewBag.ErrorMessage != null)
    {
        <div class="alert alert-danger mt-2">@ViewBag.ErrorMessage</div>
    }
</form>
